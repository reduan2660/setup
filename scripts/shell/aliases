# nvim
alias v=nvim

# k8s alias
alias kc='kubectl'

# git alias
alias gpo='git pull origin'
alias gpom='git pull origin main'
alias gpod='git pull origin dev'

alias gco='git checkout'
alias gcom='git checkout main'
alias gcod='git checkout dev'
alias gcp="git cherry-pick"

# django alias
alias pmr='python3 manage.py runserver'
alias pms='python3 manage.py shell'
alias pmrr='python3 manage.py runserver --noreload'
alias migrate='python3 manage.py migrate'
alias mm='python3 manage.py makemigrations'

# django with poetry
alias ppmr='set -a; source .env; set +a; poetry run python3 manage.py runserver'
alias ppms='set -a; source .env; set +a; poetry run python3 manage.py shell'
alias pp='set -a; source .env; set +a; poetry run python3'
alias ppmrws='set -a; source .env; set +a; poetry run python3 manage.py runserver --settings=truckbase_be.ws 0:8080'
